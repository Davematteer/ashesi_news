<!-- card_item.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/uploadEditext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="150dp"
    android:layout_marginHorizontal="30dp"
    android:backgroundTint="@color/brown"
    android:orientation="vertical"
    android:padding="16dp"
    app:cardCornerRadius="50dp">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"

        android:padding="30dp"

        android:textStyle="bold"
        android:text="Demand For Indian generic Foods ..."
        android:layout_gravity="center_horizontal"/>

    <!-- Body TextView -->
    <TextView
        android:id="@+id/bodyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Trial Text"
        android:layout_gravity="center"
        android:textSize="16sp" />

    <!-- Upload Section (optional, you could use an EditText or Button here) -->
    <EditText
        android:id="@+id/uploadEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:hint="Share your thoughts..." />

    <!-- Comment Section -->
    <TextView
        android:id="@+id/commentsSection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="10dp"
        android:text="Comments"
        android:textColor="#888888"
        android:textSize="20dp"
        android:textStyle="bold"/>

</androidx.cardview.widget.CardView>
